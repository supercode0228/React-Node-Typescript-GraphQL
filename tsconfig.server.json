{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "lib": [ "es2017", "esnext.asynciterable" ],
    "isolatedModules": false,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["server/**/*.ts", "server/**/*.tsx", "shared/**/*.ts"]
}
